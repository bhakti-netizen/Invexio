        CycleCountHelper.updateRelatedCCV(Trigger.new, Trigger.oldMap);
    	CycleCountHelper.afterApprovalAutomations(Trigger.new, Trigger.oldMap);
    }
    else if(Trigger.IsBefore){
        //CycleCountHelper.beforeUpdateAutomations(Trigger.new, Trigger.oldMap);
    }
}
